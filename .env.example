# ===========================================
# Helpdesk System - Environment Configuration
# ===========================================
# Copy this file to .env and update with your values
# The .env file is gitignored and won't be committed

# JWT Configuration (MUST be identical across all services)
JWT_SECRET=your-secret-key-min-32-characters-long-CHANGE-THIS-IN-PRODUCTION
JWT_ISSUER=HelpdeskSystem
JWT_AUDIENCE=HelpdeskClients
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRATION_DAYS=7

# PostgreSQL Container Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database Connection Strings
AUTH_DB_CONNECTION=Host=postgres;Port=5432;Database=helpdesk_auth;Username=postgres;Password=postgres
TICKET_DB_CONNECTION=Host=postgres;Port=5432;Database=helpdesk_tickets;Username=postgres;Password=postgres
USER_DB_CONNECTION=Host=postgres;Port=5432;Database=helpdesk_users;Username=postgres;Password=postgres

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=helpdesk-events

# Email Configuration (NotificationService)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_SENDER_EMAIL=noreply@helpdesk.local
SMTP_SENDER_NAME=Helpdesk Support
SMTP_PASSWORD=

# Application Ports (for local development)
API_GATEWAY_PORT=5100
AUTH_SERVICE_PORT=5101
TICKET_SERVICE_PORT=5102
USER_SERVICE_PORT=5103
NOTIFICATION_SERVICE_PORT=5104
POSTGRES_PORT=5432
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=helpdesk_tickets;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-min-32-characters-long",
    "Issuer": "HelpdeskSystem",
    "Audience": "HelpdeskClients",
    "ExpirationMinutes": 60
  },
  "MessagingSettings": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "helpdesk-events",
    "AutoCreateInfrastructure": true,
    "ConnectionTimeout": 30,
    "PersistentMessages": true,
    "RetryCount": 3,
    "RetryDelayMs": 1000
  }
}
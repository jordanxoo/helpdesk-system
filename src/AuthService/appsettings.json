{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=helpdesk_auth;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-min-32-characters-long",
    "Issuer": "HelpdeskSystem",
    "Audience": "HelpdeskClients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "MessagingSettings": {
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "ExchangeName": "helpdesk_exchange",
    "ConnectionTimeout": 30,
    "AutoCreateInfrastructure": true
  }
}
